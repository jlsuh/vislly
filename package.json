{
  "name": "vislly",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "biome:check": "biome check .",
    "biome:ci": "biome ci .",
    "biome:format": "biome check --write --unsafe .",
    "biome:migrate": "biome migrate --write",
    "build": "tsc --extendedDiagnostics --erasableSyntaxOnly && next build --turbopack",
    "depc:ci": "pnpm depc:report && pnpm depc:metrics && pnpm depc:gen",
    "depc:gen": "depcruise -I \"^src\" -T dot ./src | dot -T svg | depcruise-wrap-stream-in-html > ./dependency-graph.html && pnpm depc:open",
    "depc:genl": "depcruise src -I \"^src\" -S 2 -T dot | dot -T svg | depcruise-wrap-stream-in-html > ./dependency-graph.html && pnpm depc:open",
    "depc:metrics": "depcruise ./src --metrics -T metrics",
    "depc:open": "open ./dependency-graph.html || start ./dependency-graph.html",
    "depc:report": "depcruise ./src",
    "dev": "next dev --turbopack",
    "preview": "next start"
  },
  "dependencies": {
    "d3": "7.9.0",
    "next": "15.3.5",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.6",
    "@types/d3": "7.4.3",
    "@types/node": "24.0.11",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "dependency-cruiser": "16.10.4",
    "type-fest": "4.41.0",
    "typescript": "5.8.3"
  },
  "pnpm": {
    "neverBuiltDependencies": []
  }
}
